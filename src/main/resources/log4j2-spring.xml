<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">

    <!-- âš™ï¸ CÃ¡c biáº¿n dÃ¹ng chung trong file -->
    <Properties>
        <!-- ThÆ° má»¥c chá»©a log file -->
        <Property name="LOG_DIR">logs</Property>

        <!-- Äá»‹nh dáº¡ng log chuáº©n (thá»i gian - cáº¥p Ä‘á»™ - thread - class - message) -->
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss} %-5level [%t] %c{1.} - %msg%n</Property>
    </Properties>

    <!-- ðŸ“¦ Khai bÃ¡o nÆ¡i log Ä‘Æ°á»£c ghi -->
    <Appenders>
        mvn spring-boot:run

        <!-- âœ… Ghi log ra mÃ n hÃ¬nh (Console) -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}" />
        </Console>

        <!-- âœ… Ghi log ra file, cÃ³ xoay vÃ²ng theo ngÃ y + dung lÆ°á»£ng -->
        <RollingFile name="RollingFile"
                     fileName="${LOG_DIR}/app.log"
                     filePattern="${LOG_DIR}/app-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}" />
            <Policies>
                <!-- ðŸ•“ Táº¡o file má»›i má»—i ngÃ y -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
                <!-- ðŸ’¾ Táº¡o file má»›i náº¿u lá»›n hÆ¡n 10MB -->
                <SizeBasedTriggeringPolicy size="10MB" />
            </Policies>
            <!-- ðŸ” Chá»‰ giá»¯ tá»‘i Ä‘a 10 file log cÅ© -->
            <DefaultRolloverStrategy max="10" />
        </RollingFile>

        <!-- âœ… Ghi log ra file báº¥t Ä‘á»“ng bá»™ (nÃ¢ng cao hiá»‡u suáº¥t) -->
        <Async name="Async">
            <AppenderRef ref="RollingFile" />
        </Async>

    </Appenders>

    <!-- ðŸ” Cáº¥u hÃ¬nh log cho tá»«ng pháº§n há»‡ thá»‘ng -->
    <Loggers>

        <!-- âœ… Log cho cÃ¡c class trong project (vÃ­ dá»¥ com.web.*) -->
        <Logger name="com.web" level="debug" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="Async" />
        </Logger>

        <!-- âœ… Log máº·c Ä‘á»‹nh cho toÃ n há»‡ thá»‘ng -->
        <Root level="info">
            <AppenderRef ref="Console" />
        </Root>

    </Loggers>

</Configuration>
